{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Backend-Doggee API",
    "description": "API для управления профилями пользователей и их собаками."
  },
  "host": "localhost:3001",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "Регистрация пользователя",
        "description": "Регистрация нового пользователя с указанием имени пользователя и пароля.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "username": { "type": "string" },
                "password": { "type": "string" }
              },
              "required": ["username", "password"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "User created successfully",
            "schema": {
              "type": "object",
              "properties": {
                "message": { "type": "string" },
                "access_token": { "type": "string" },
                "refresh_token": { "type": "string" },
                "userId": { "type": "integer" }
              }
            },
            "examples": {
              "application/json": {
                "message": "User created successfully",
                "access_token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
                "refresh_token": "dGhpcyBpcyBhIHJlZnJlc2ggdG9rZW4...",
                "userId": 1
              }
            }
          },
          "400": {
            "description": "Invalid input",
            "schema": {
              "type": "object",
              "properties": {
                "errors": {
                  "type": "array",
                  "items": { "type": "object" }
                }
              }
            }
          },
          "401": {
            "description": "User already exists",
            "schema": {
              "type": "object",
              "properties": {
                "message": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Вход пользователя",
        "description": "Аутентификация пользователя по имени пользователя и паролю.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "username": { "type": "string" },
                "password": { "type": "string" }
              },
              "required": ["username", "password"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User logged in successfully",
            "schema": {
              "type": "object",
              "properties": {
                "access_token": { "type": "string" },
                "refresh_token": { "type": "string" },
                "userId": { "type": "integer" }
              }
            },
            "examples": {
              "application/json": {
                "access_token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
                "refresh_token": "dGhpcyBpcyBhIHJlZnJlc2ggdG9rZW4...",
                "userId": 1
              }
            }
          },
          "400": {
            "description": "Invalid input",
            "schema": {
              "type": "object",
              "properties": {
                "errors": {
                  "type": "array",
                  "items": { "type": "object" }
                }
              }
            }
          },
          "401": {
            "description": "Invalid credentials",
            "schema": {
              "type": "object",
              "properties": {
                "message": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "/auth/refresh-token": {
      "post": {
        "tags": ["Auth"],
        "summary": "Обновление токена",
        "description": "Получение нового access токена с помощью refresh токена.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "refresh_token": { "type": "string" }
              },
              "required": ["refresh_token"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Tokens refreshed successfully",
            "schema": {
              "type": "object",
              "properties": {
                "access_token": { "type": "string" },
                "refresh_token": { "type": "string" }
              }
            },
            "examples": {
              "application/json": {
                "access_token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
                "refresh_token": "dGhpcyBpcyBhIHJlZnJlc2ggdG9rZW4..."
              }
            }
          },
          "401": {
            "description": "Invalid refresh token",
            "schema": {
              "type": "object",
              "properties": {
                "message": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "/users/{id}/profile": {
      "get": {
        "tags": ["Users"],
        "summary": "Получение профиля пользователя",
        "description": "Получение данных профиля пользователя по его ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "ID пользователя"
          }
        ],
        "responses": {
          "200": {
            "description": "User profile retrieved successfully",
            "schema": {
              "type": "object",
              "properties": {
                "id": { "type": "integer" },
                "username": { "type": "string" },
                "name": { "type": "string" },
                "city": { "type": "string" },
                "birthdate": { "type": "string", "format": "date" },
                "dogs": {
                  "type": "array",
                  "items": { "$ref": "#/definitions/Dog" }
                }
              }
            },
            "examples": {
              "application/json": {
                "id": 1,
                "username": "john_doe",
                "name": "John Doe",
                "city": "New York",
                "birthdate": "1990-01-01",
                "dogs": [
                  {
                    "id": 1,
                    "name": "Buddy",
                    "breed": "Labrador Retriever",
                    "birthdate": "2015-06-15",
                    "weight": 30.5,
                    "ownerId": 1
                  }
                ]
              }
            }
          },
          "404": {
            "description": "User not found",
            "schema": {
              "type": "object",
              "properties": {
                "message": { "type": "string" }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["Users"],
        "summary": "Обновление профиля пользователя",
        "description": "Обновление данных профиля пользователя по его ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "ID пользователя"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "username": { "type": "string" },
                "name": { "type": "string" },
                "city": { "type": "string" },
                "birthdate": { "type": "string", "format": "date" }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Profile updated successfully",
            "schema": {
              "type": "object",
              "properties": {
                "message": { "type": "string" }
              }
            },
            "examples": {
              "application/json": {
                "message": "Profile updated successfully"
              }
            }
          },
          "404": {
            "description": "User not found",
            "schema": {
              "type": "object",
              "properties": {
                "message": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "/users/{id}/dogs": {
      "get": {
        "tags": ["Dogs"],
        "summary": "Получение всех собак пользователя",
        "description": "Получение списка всех собак, принадлежащих пользователю.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "ID пользователя"
          }
        ],
        "responses": {
          "200": {
            "description": "User's dogs retrieved successfully",
            "schema": {
              "type": "array",
              "items": { "$ref": "#/definitions/Dog" }
            },
            "examples": {
              "application/json": [
                {
                  "id": 1,
                  "name": "Buddy",
                  "breed": "Labrador Retriever",
                  "birthdate": "2015-06-15",
                  "weight": 30.5,
                  "ownerId": 1
                }
              ]
            }
          },
          "404": {
            "description": "User not found",
            "schema": {
              "type": "object",
              "properties": {
                "message": { "type": "string" }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Dogs"],
        "summary": "Добавление собаки к пользователю",
        "description": "Добавление новой собаки к пользователю по его ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "ID пользователя"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "breed": { "type": "string" },
                "birthdate": { "type": "string", "format": "date" },
                "weight": { "type": "number" }
              },
              "required": ["name", "breed"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Dog created successfully",
            "schema": {
              "type": "object",
              "properties": {
                "message": { "type": "string" },
                "dog": { "$ref": "#/definitions/Dog" }
              }
            },
            "examples": {
              "application/json": {
                "message": "Dog created successfully",
                "dog": {
                  "id": 1,
                  "name": "Buddy",
                  "breed": "Labrador Retriever",
                  "birthdate": "2015-06-15",
                  "weight": 30.5,
                  "ownerId": 1
                }
              }
            }
          },
          "404": {
            "description": "User not found",
            "schema": {
              "type": "object",
              "properties": {
                "message": { "type": "string" }
              }
            }
          },
          "400": {
            "description": "Invalid input",
            "schema": {
              "type": "object",
              "properties": {
                "errors": {
                  "type": "array",
                  "items": { "type": "object" }
                }
              }
            }
          }
        }
      }
    },
    "/breeds": {
      "get": {
        "tags": ["Dogs"],
        "summary": "Получение списка пород",
        "description": "Получение предопределенного списка пород собак.",
        "responses": {
          "200": {
            "description": "Breeds retrieved successfully",
            "schema": {
              "type": "array",
              "items": { "type": "string" }
            },
            "examples": {
              "application/json": [
                "dogBreeds.LabradorRetriever",
                "dogBreeds.GermanShepherd",
                "dogBreeds.GoldenRetriever",
                // другие породы
              ]
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Dog": {
      "type": "object",
      "properties": {
        "id": { "type": "integer" },
        "name": { "type": "string" },
        "breed": { "type": "string" },
        "birthdate": { "type": "string", "format": "date" },
        "weight": { "type": "number" },
        "ownerId": { "type": "integer" }
      }
    }
  },
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "security": [
    {
      "Bearer": []
    }
  ]
}